<?xml version='1.0' encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"> 

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/title_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#fff"
            android:gravity="center"
            android:text="Fast Food` 01"
            android:textColor="#000"
            android:textSize="32dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_comida1"
            android:layout_width="183dp"
            android:layout_height="151dp"
            android:layout_below="@+id/title_main"
            android:layout_margin="16dp"
            android:gravity="center"
            android:src="@drawable/comida1" />

        <ImageView
            android:id="@+id/img_comida2"
            android:layout_width="183dp"
            android:layout_height="151dp"
            android:layout_below="@+id/title_main"
            android:layout_margin="16dp"
            android:layout_toRightOf="@+id/img_comida1"
            android:gravity="center"
            android:src="@drawable/comida2" />
    </RelativeLayout>

    <EditText
        android:id="@+id/usr_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_comida1"
        android:layout_gravity="center"
        android:layout_margin="18dp"
        android:ems="10"
        android:hint="Nome.:" />

    <TextView
        android:id="@+id/prince"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#fff"
        android:gravity="center"
        android:text="PreÃ§o R$15,00"
        android:textColor="#000"
        android:textSize="25dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="+"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/qts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_toRightOf="@+id/btn_add"
            android:background="#fff"
            android:text="0"
            android:textColor="#000"
            android:textSize="32dp" />

        <Button
            android:id="@+id/btn_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_toRightOf="@id/qts"
            android:text="-"
            android:textSize="16dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:ems="15"
        android:text="Total" />

    <TextView
        android:id="@+id/msgTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textAlignment="center"
        android:textSize="20dp"/>


</LinearLayout>
